OS := $(shell uname -s)
######
CREDIS_HOME=third-party/credis-0.2.3
CREDIS=$(CREDIS_HOME)/credis.o
CREDIS_INC=-I$(CREDIS_HOME)
######
LIBNDPI_INC=-I./nDPI/src/include
LIBNDPI=./nDPI/src/lib/.libs/libndpi.a 
######
LIBPCAP=-lpcap
######
LIBMICRO_HOME=./third-party/libmicrohttpd-0.9.26
LIBMICRO_INC=-I$(LIBMICRO_HOME)/src/include/
LIBMICROHTTPD=$(LIBMICRO_HOME)/src/daemon/.libs/libmicrohttpd.a
######
LUAJIT_HOME=./third-party/LuaJIT-2.0.1
LUAJIT_INC=-I$(LUAJIT_HOME)/src
LUAJIT_LIB=$(LUAJIT_HOME)/src/libluajit.a
######
LIBRRDTOOL_HOME=third-party/rrdtool-1.4.7
LIBRRDTOOL_INC=-I$(LIBRRDTOOL_HOME)/src/
LIBRRDTOOL_LIB=$(LIBRRDTOOL_HOME)/src/.libs/librrd_th.a

######
TARGET = ntopng
LIBS = $(LIBNDPI) $(LIBPCAP) $(LIBMICROHTTPD) $(LUAJIT_LIB) $(LIBRRDTOOL_LIB) -lxml2 @LINK_OPTS@ @LIBGNUTLS@ -lm -ldl -lpthread
CPPFLAGS = -g -Wall $(CREDIS_INC) $(LIBNDPI_INC) $(LIBMICRO_INC) $(LUAJIT_INC) $(LIBRRDTOOL_INC) -D SVN_RELEASE="@SVN_RELEASE@"

ifeq ($(OS),Linux)
LIBS += -lrt
endif

ifeq ($(OS),Darwin)
CPPFLAGS += -DDARWIN
endif

.PHONY: default all clean

default: $(LIBNDPI) $(LUAJIT_LIB) $(LIBRRDTOOL_LIB) $(TARGET)
all: default

OBJECTS = $(patsubst %.cpp, %.o, $(wildcard *.cpp)) $(CREDIS)
HEADERS = $(wildcard *.h)

%.o: %.c $(HEADERS)
	g++ $(CPPFLAGS) -c $< -o $@

%.o: %.cpp $(HEADERS)
	g++ $(CPPFLAGS) -c $< -o $@

.PRECIOUS: $(TARGET) $(OBJECTS)

$(TARGET): $(OBJECTS) $(LIBMICROHTTPD) $(LIBRRDTOOL)
	g++ $(OBJECTS) -Wall $(LIBS) -o $@

$(LIBNDPI):
	svn co https://svn.ntop.org/svn/ntop/trunk/nDPI/
	cd nDPI; ./configure; @GMAKE@

$(LUAJIT_LIB):
	cd $(LUAJIT_HOME); @GMAKE@

$(LIBMICROHTTPD): 
	cd $(LIBMICRO_HOME); ./configure; @GMAKE@

$(LIBRRDTOOL_LIB):
	cd $(LIBRRDTOOL_HOME); ./configure --disable-rrd_graph; cd src; @GMAKE@ librrd_th.la

clean:
	-rm -f *.o *~ svn-commit.* #config.h
	-rm -f $(TARGET)

veryclean:
	-rm -rf nDPI

